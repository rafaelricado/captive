<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Conexões Ativas &mdash; Captive Portal</title>
  <%- include('_head') %>
</head>
<body>
  <%- include('_nav', { page: pageObj }) %>

  <main class="container">
    <h2 class="page-title">Conexões Ativas</h2>

    <% if (updatedAt) { %>
      <p class="meta" id="meta-line">Snapshot de <strong><%= updatedAt %></strong> &mdash; <%= connections.length %> conexão(ões) &mdash; atualiza em <span id="rt">30s</span></p>
    <% } else { %>
      <p class="meta" id="meta-line">Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span></p>
    <% } %>

    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Porta</th>
            <th>Enviado</th>
            <th>Recebido</th>
            <th>Roteador</th>
          </tr>
        </thead>
        <tbody id="tbody-data">
          <% if (connections.length === 0) { %>
            <tr><td colspan="7" style="text-align:center;color:#9ca3af">Nenhuma conexão registrada.</td></tr>
          <% } %>
          <% connections.forEach((c, i) => { %>
            <tr>
              <td style="color:#9ca3af"><%= i + 1 %></td>
              <td><%= c.src_ip %></td>
              <td><%= c.dst_ip %></td>
              <td><%= c.dst_port %></td>
              <td><%= c.bytes_orig %></td>
              <td><%= c.bytes_reply %></td>
              <td><%= c.router_name %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <%- include('_footer') %>
  <script>
  (function () {
    function esc(s) {
      return String(s == null ? '' : s)
        .replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
    }
    function buildRows(connections) {
      if (!connections.length)
        return '<tr><td colspan="7" style="text-align:center;color:#9ca3af">Nenhuma conexão registrada.</td></tr>';
      return connections.map((c, i) => `<tr>
        <td style="color:#9ca3af">${i + 1}</td>
        <td>${esc(c.src_ip)}</td>
        <td>${esc(c.dst_ip)}</td>
        <td>${c.dst_port != null ? c.dst_port : '—'}</td>
        <td>${esc(c.bytes_orig)}</td>
        <td>${esc(c.bytes_reply)}</td>
        <td>${esc(c.router_name)}</td>
      </tr>`).join('');
    }
    async function doRefresh() {
      try {
        const r = await fetch('/admin/connections/data', { credentials: 'same-origin' });
        if (!r.ok) return;
        const data = await r.json();
        document.getElementById('tbody-data').innerHTML = buildRows(data.connections);
        const meta = document.getElementById('meta-line');
        if (meta) meta.innerHTML = data.updatedAt
          ? `Snapshot de <strong>${data.updatedAt}</strong> &mdash; ${data.connections.length} conexão(ões) &mdash; atualiza em <span id="rt">30s</span>`
          : 'Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span>';
      } catch (e) {}
    }
    let ticks = 30;
    setInterval(() => {
      ticks--;
      const el = document.getElementById('rt');
      if (el) el.textContent = ticks + 's';
      if (ticks <= 0) { ticks = 30; doRefresh(); }
    }, 1000);
  })();
  </script>
</body>
</html>
