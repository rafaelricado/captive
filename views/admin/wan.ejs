<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Estatísticas WAN &mdash; Captive Portal</title>
  <%- include('_head') %>
  <style>
    .badge-up   { background: #dcfce7; color: #16a34a; }
    .badge-down { background: #fee2e2; color: #dc2626; }
  </style>
</head>
<body>
  <%- include('_nav', { page: pageObj }) %>

  <main class="container">
    <h2 class="page-title">Estatísticas WAN &mdash; últimas 24h</h2>

    <% if (updatedAt) { %>
      <p class="meta" id="meta-line">Último recebimento: <strong><%= updatedAt %></strong> &mdash; <%= stats.length %> interface(s) &mdash; atualiza em <span id="rt">30s</span></p>
    <% } else { %>
      <p class="meta" id="meta-line">Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span></p>
    <% } %>

    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>Interface</th>
            <th>TX acumulado (24h)</th>
            <th>RX acumulado (24h)</th>
            <th>Status</th>
            <th>Roteador</th>
            <th>Último registro</th>
          </tr>
        </thead>
        <tbody id="tbody-data">
          <% if (stats.length === 0) { %>
            <tr><td colspan="6" style="text-align:center;color:#9ca3af">Nenhum dado disponível.</td></tr>
          <% } %>
          <% stats.forEach(s => { %>
            <tr>
              <td><strong><%= s.interface_name %></strong></td>
              <td><%= s.tx %></td>
              <td><%= s.rx %></td>
              <td>
                <% if (s.is_up) { %>
                  <span class="badge badge-up">UP</span>
                <% } else { %>
                  <span class="badge badge-down">DOWN</span>
                <% } %>
              </td>
              <td><%= s.router_name %></td>
              <td><%= s.recorded_at %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <%- include('_footer') %>
  <script>
  (function () {
    function esc(s) {
      return String(s == null ? '' : s)
        .replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
    }
    function buildRows(stats) {
      if (!stats.length)
        return '<tr><td colspan="6" style="text-align:center;color:#9ca3af">Nenhum dado disponível.</td></tr>';
      return stats.map(s => `<tr>
        <td><strong>${esc(s.interface_name)}</strong></td>
        <td>${esc(s.tx)}</td>
        <td>${esc(s.rx)}</td>
        <td><span class="badge ${s.is_up ? 'badge-up' : 'badge-down'}">${s.is_up ? 'UP' : 'DOWN'}</span></td>
        <td>${esc(s.router_name)}</td>
        <td>${esc(s.recorded_at)}</td>
      </tr>`).join('');
    }
    async function doRefresh() {
      try {
        const r = await fetch('/admin/wan/data', { credentials: 'same-origin' });
        if (!r.ok) return;
        const data = await r.json();
        document.getElementById('tbody-data').innerHTML = buildRows(data.stats);
        const meta = document.getElementById('meta-line');
        if (meta) meta.innerHTML = data.updatedAt
          ? `Último recebimento: <strong>${data.updatedAt}</strong> &mdash; ${data.stats.length} interface(s) &mdash; atualiza em <span id="rt">30s</span>`
          : 'Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span>';
      } catch (e) {}
    }
    let ticks = 30;
    setInterval(() => {
      ticks--;
      const el = document.getElementById('rt');
      if (el) el.textContent = ticks + 's';
      if (ticks <= 0) { ticks = 30; doRefresh(); }
    }, 1000);
  })();
  </script>
</body>
</html>
