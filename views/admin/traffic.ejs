<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tráfego de Clientes &mdash; Captive Portal</title>
  <%- include('_head') %>
</head>
<body>
  <%- include('_nav', { page: pageObj }) %>

  <main class="container">
    <h2 class="page-title">Tráfego de Clientes</h2>

    <% if (updatedAt) { %>
      <p class="meta" id="meta-line">Snapshot de <strong><%= updatedAt %></strong> &mdash; <%= clients.length %> cliente(s) &mdash; atualiza em <span id="rt">30s</span></p>
    <% } else { %>
      <p class="meta" id="meta-line">Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span></p>
    <% } %>

    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>IP</th>
            <th>Hostname / MAC</th>
            <th>Upload</th>
            <th>Download</th>
            <th>Total</th>
            <th>Roteador</th>
          </tr>
        </thead>
        <tbody id="tbody-data">
          <% if (clients.length === 0) { %>
            <tr><td colspan="7" style="text-align:center;color:#9ca3af">Nenhum dado disponível.</td></tr>
          <% } %>
          <% clients.forEach((c, i) => { %>
            <tr>
              <td style="color:#9ca3af"><%= i + 1 %></td>
              <td><strong><%= c.ip_address %></strong></td>
              <td>
                <div><%= c.hostname %></div>
                <% if (c.mac_address !== '—') { %>
                  <div style="font-size:.75rem;color:#9ca3af"><%= c.mac_address %></div>
                <% } %>
              </td>
              <td><%= c.bytes_up %></td>
              <td><%= c.bytes_down %></td>
              <td><strong><%= c.total %></strong></td>
              <td><%= c.router_name %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <%- include('_footer') %>
  <script>
  (function () {
    function esc(s) {
      return String(s == null ? '' : s)
        .replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
    }
    function buildRows(clients) {
      if (!clients.length)
        return '<tr><td colspan="7" style="text-align:center;color:#9ca3af">Nenhum dado disponível.</td></tr>';
      return clients.map((c, i) => `<tr>
        <td style="color:#9ca3af">${i + 1}</td>
        <td><strong>${esc(c.ip_address)}</strong></td>
        <td><div>${esc(c.hostname)}</div>${c.mac_address !== '—' ? `<div style="font-size:.75rem;color:#9ca3af">${esc(c.mac_address)}</div>` : ''}</td>
        <td>${esc(c.bytes_up)}</td>
        <td>${esc(c.bytes_down)}</td>
        <td><strong>${esc(c.total)}</strong></td>
        <td>${esc(c.router_name)}</td>
      </tr>`).join('');
    }
    async function doRefresh() {
      try {
        const r = await fetch('/admin/traffic/data', { credentials: 'same-origin' });
        if (!r.ok) return;
        const data = await r.json();
        document.getElementById('tbody-data').innerHTML = buildRows(data.clients);
        const meta = document.getElementById('meta-line');
        if (meta) meta.innerHTML = data.updatedAt
          ? `Snapshot de <strong>${data.updatedAt}</strong> &mdash; ${data.clients.length} cliente(s) &mdash; atualiza em <span id="rt">30s</span>`
          : 'Nenhum dado recebido ainda. &mdash; atualiza em <span id="rt">30s</span>';
      } catch (e) {}
    }
    let ticks = 30;
    setInterval(() => {
      ticks--;
      const el = document.getElementById('rt');
      if (el) el.textContent = ticks + 's';
      if (ticks <= 0) { ticks = 30; doRefresh(); }
    }, 1000);
  })();
  </script>
</body>
</html>
