<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wi-Fi - <%= orgName %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body { background: linear-gradient(135deg, <%= bgColor1 %> 0%, <%= bgColor2 %> 50%, <%= bgColor1 %> 100%); }
    header { background: <%= bgColor1 %>; }
    .btn-primary { background: <%= bgColor1 %>; }
    .btn-primary:hover { background: <%= bgColor2 %>; }
    .tab-btn.active { color: <%= bgColor1 %>; border-bottom-color: <%= bgColor1 %>; }
    .form-group input:focus { border-color: <%= bgColor1 %>; box-shadow: 0 0 0 3px <%= bgColor1 %>22; }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div class="logo-area">
        <% if (orgLogo) { %>
          <img src="<%= orgLogo %>" alt="<%= orgName %>" class="org-logo">
        <% } else { %>
          <h1>Wi-Fi Visitantes</h1>
        <% } %>
        <p class="subtitle"><%= orgName %></p>
      </div>
    </header>

    <% if (error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>

    <div class="tabs">
      <button class="tab-btn <%= activeTab === 'cadastro' ? 'active' : '' %>" data-tab="cadastro">Primeiro Acesso</button>
      <button class="tab-btn <%= activeTab === 'login' ? 'active' : '' %>" data-tab="login">Já tenho cadastro</button>
    </div>

    <!-- Aba Cadastro -->
    <div class="tab-content <%= activeTab === 'cadastro' ? 'active' : '' %>" id="tab-cadastro">
      <form action="/api/register" method="POST" id="form-cadastro">
        <input type="hidden" name="mac" value="<%= mac %>">
        <input type="hidden" name="ip" value="<%= ip %>">
        <input type="hidden" name="linkOrig" value="<%= linkOrig %>">

        <div class="form-group">
          <label for="nome_completo">Nome Completo *</label>
          <input type="text" id="nome_completo" name="nome_completo" required
                 placeholder="Digite seu nome completo">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="cpf">CPF *</label>
            <input type="text" id="cpf" name="cpf" required maxlength="14"
                   placeholder="000.000.000-00">
            <span class="field-status" id="cpf-status"></span>
          </div>
          <div class="form-group">
            <label for="data_nascimento">Data de Nascimento *</label>
            <input type="text" id="data_nascimento" name="data_nascimento" required maxlength="10"
                   placeholder="DD/MM/AAAA" autocomplete="bday">
            <span class="field-status" id="data-status"></span>
          </div>
        </div>

        <div id="nome-mae-group" class="form-group" style="display:none">
          <label for="nome_mae">Nome Completo da Mãe *</label>
          <input type="text" id="nome_mae" name="nome_mae" maxlength="255"
                 placeholder="Nome completo da responsável">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="telefone">Telefone *</label>
            <input type="text" id="telefone" name="telefone" required maxlength="15"
                   placeholder="(00) 00000-0000">
          </div>
          <div class="form-group">
            <label for="email">E-mail *</label>
            <input type="email" id="email" name="email" required
                   placeholder="seu@email.com">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group form-group-small">
            <label for="cep">CEP *</label>
            <input type="text" id="cep" name="cep" required maxlength="9"
                   placeholder="00000-000">
            <span class="field-status" id="cep-status"></span>
          </div>
          <div class="form-group form-group-large">
            <label for="logradouro">Logradouro</label>
            <input type="text" id="logradouro" name="logradouro" readonly
                   placeholder="Preenchido pelo CEP">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group form-group-small">
            <label for="numero">Numero *</label>
            <input type="text" id="numero" name="numero" required
                   placeholder="N\u00ba">
          </div>
          <div class="form-group form-group-large">
            <label for="complemento">Complemento</label>
            <input type="text" id="complemento" name="complemento"
                   placeholder="Apto, Bloco, etc.">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="bairro">Bairro</label>
            <input type="text" id="bairro" name="bairro" readonly
                   placeholder="Preenchido pelo CEP">
          </div>
          <div class="form-group">
            <label for="cidade">Cidade</label>
            <input type="text" id="cidade" name="cidade" readonly
                   placeholder="Preenchido pelo CEP">
          </div>
          <div class="form-group form-group-tiny">
            <label for="estado">UF</label>
            <input type="text" id="estado" name="estado" readonly maxlength="2"
                   placeholder="UF">
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar e Conectar</button>
      </form>
    </div>

    <!-- Aba Login -->
    <div class="tab-content <%= activeTab === 'login' ? 'active' : '' %>" id="tab-login">
      <form action="/api/login" method="POST" id="form-login">
        <input type="hidden" name="mac" value="<%= mac %>">
        <input type="hidden" name="ip" value="<%= ip %>">
        <input type="hidden" name="linkOrig" value="<%= linkOrig %>">

        <p class="login-info">Digite seu CPF e data de nascimento para acessar a internet.</p>

        <div class="form-group">
          <label for="cpf-login">CPF *</label>
          <input type="text" id="cpf-login" name="cpf" required maxlength="14"
                 placeholder="000.000.000-00" class="cpf-input">
        </div>

        <div class="form-group">
          <label for="data_nascimento_login">Data de Nascimento *</label>
          <input type="text" id="data_nascimento_login" name="data_nascimento" required maxlength="10"
                 placeholder="DD/MM/AAAA" autocomplete="bday">
        </div>

        <button type="submit" class="btn btn-primary">Conectar</button>
      </form>
    </div>

    <footer>
      <p class="footer-empresa"><%= orgName %></p>
      <p class="footer-dev">Desenvolvido por BP TI</p>
    </footer>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>
