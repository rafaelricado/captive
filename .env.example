# Servidor
PORT=3000

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=captive_portal
DB_USER=captive_user
DB_PASS="sua_senha_do_banco"    # Use aspas: suporta # e outros caracteres especiais

# Mikrotik RouterOS API
MIKROTIK_HOST=15.1.1.1          # IP do gateway da rede de visitantes (ether2)
MIKROTIK_USER=captive_api       # Usuario criado pelo script captive_portal_ether2.rsc
MIKROTIK_PASS="senha_da_api"    # Use aspas: suporta # e outros caracteres especiais
MIKROTIK_PORT=8728

# Sessao (em horas) - padrao: 48h (2 dias)
SESSION_DURATION_HOURS=48

# HTTPS / Proxy reverso (nginx)
# Defina true se o Node.js estiver atrás do nginx com SSL
# Habilita flag Secure no cookie de sessão e leitura correta do IP real via X-Forwarded-For
HTTPS_ENABLED=false
TRUST_PROXY=false

# Painel Admin
ADMIN_USER=admin
ADMIN_PASSWORD="senha_do_admin" # Use aspas: suporta # e outros caracteres especiais
SESSION_SECRET=                 # Gerado automaticamente pelo setup.sh
